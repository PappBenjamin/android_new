<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/schedule_item_background"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:padding="16dp">

    <!-- Color Accent Bar -->
    <View
        android:id="@+id/viewColorAccent"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="#8B5CF6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Habit Icon -->
    <TextView
        android:id="@+id/tvHabitIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/habit_icon_background"
        android:gravity="center"
        android:text="ðŸ¥ƒ"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/viewColorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Habit Name -->
    <TextView
        android:id="@+id/tvHabitName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="Drink rum"
        android:textColor="#F8FAFC"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tvHabitIcon"
        app:layout_constraintEnd_toStartOf="@id/tvScheduledTime"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scheduled Time -->
    <TextView
        android:id="@+id/tvScheduledTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="06:00"
        android:textColor="#94A3B8"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/ivStatusIndicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Status Indicator -->
    <ImageView
        android:id="@+id/ivStatusIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_completed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>