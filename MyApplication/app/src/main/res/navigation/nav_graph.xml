<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.firstapp.myapplication.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addScheduleFragment"
            app:destination="@id/addScheduleFragment" />
        <action
            android:id="@+id/action_homeFragment_to_scheduleDetailsFragment"
            app:destination="@id/scheduleDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.firstapp.myapplication.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_addHabitFragment"
            app:destination="@id/addHabitFragment" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/addHabitFragment"
        android:name="com.firstapp.myapplication.ui.habit.AddHabitFragment"
        android:label="Add Habit"
        tools:layout="@layout/fragment_add_habit">
        <action
            android:id="@+id/action_addHabitFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/addScheduleFragment"
        android:name="com.firstapp.myapplication.ui.schedule.AddScheduleFragment"
        android:label="Add Schedule"
        tools:layout="@layout/fragment_add_schedule">
        <action
            android:id="@+id/action_addScheduleFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/scheduleDetailsFragment"
        android:name="com.firstapp.myapplication.ui.schedule.ScheduleDetailsFragment"
        android:label="Schedule Details"
        tools:layout="@layout/fragment_schedule_details">
        <argument
            android:name="scheduleId"
            app:argType="integer" />
        <action
            android:id="@+id/action_scheduleDetailsFragment_to_editScheduleFragment"
            app:destination="@id/editScheduleFragment" />
        <action
            android:id="@+id/action_scheduleDetailsFragment_to_addProgressFragment"
            app:destination="@id/addProgressFragment" />
        <action
            android:id="@+id/action_scheduleDetailsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/editScheduleFragment"
        android:name="com.firstapp.myapplication.ui.schedule.EditScheduleFragment"
        android:label="Edit Schedule"
        tools:layout="@layout/fragment_edit_schedule">
        <argument
            android:name="scheduleId"
            app:argType="integer" />
        <action
            android:id="@+id/action_editScheduleFragment_to_scheduleDetailsFragment"
            app:destination="@id/scheduleDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addProgressFragment"
        android:name="com.firstapp.myapplication.ui.schedule.AddProgressFragment"
        android:label="Add Progress"
        tools:layout="@layout/fragment_add_progress">
        <argument
            android:name="scheduleId"
            app:argType="integer" />
        <action
            android:id="@+id/action_addProgressFragment_to_scheduleDetailsFragment"
            app:destination="@id/scheduleDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.firstapp.myapplication.ui.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>

</navigation>